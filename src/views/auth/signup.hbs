<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp</h3>
                </div>
                <form action="/signup" method="POST">
                <div class="card-body">
                    <h5>Datos personales</h5>
                    <div class="form-group">
                        <input type="text" name="FullName" placeholder="Full Name" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" placeholder="E-mail" class="form-control">
                    </div>
                    <div class="form-group">
                    <div class="row">
                        <div class="col-md-4 mx-auto">
                            <div class="form-group">
                                <input type="text" name="Provincia" placeholder="Provincia" class="form-control">
                            </div>  
                        </div>
                        <div class="col-md-4 mx-auto">
                            <div class="form-group">
                                <input type="text" name="Localidad" placeholder="Localidad" class="form-control">
                            </div>  
                        </div>
                        <div class="col-md-4 mx-auto">
                            <div class="form-group">
                                <input type="text" name="Domicilio" placeholder="Domicilio" class="form-control">
                            </div>  
                        </div>
                    </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5>Datos de usuario</h5>
                    <div class="form-group">
                        <input type="text" name="Username" placeholder="Username" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" placeholder="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
            </div>  
        </div>
    </div>
</div>